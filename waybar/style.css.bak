* {
  font-family: "JetBrainsMono Nerd Font";
  font-weight: bold;
  font-size: 15px;
}

window#waybar {
  background: #2e3440;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 7px;
}

#workspaces {
  padding-left: 4px;
  padding-right: 4px;
  padding-top: 1px;
}

#workspaces button {
  padding-left: 4px;
  padding-right: 4px;
  color: #81a1c1;
}

#workspaces button.active {
  transition: all 0.3s ease;
  padding-left: 4px;
  padding-right: 4px;
  background-color: #4c566a;
  border-radius: 7px;
  color: #81a1c1;
}

#workspaces button:hover {
  background: none;
}
#workspaces button.urgent {
  background-color: #b53737;
  border-radius: 7px;
}

#backlight {
  color: #d08770;
  font-size: 16px;
  margin: 1px 0px 0px 0px;
  padding-left: 10px;
  padding-right: 10px;
}
#battery {
  color: #8aadf4;
  font-size: 16px;
  opacity: 1;
  margin: 0px 0px 0px 0px;
  padding-left: 5px;
  padding-right: 15px;
}

#clock {
  color: #81a1c1;
  font-size: 16px;
  opacity: 1;
  margin: 0px 0px 0px 0px;
  padding-left: 10px;
  padding-right: 10px;
}
#pulseaudio {
  color: #ea999c;
  font-size: 16px;
  margin: 0px 0px 0px 0px;
  padding-left: 10px;
  padding-right: 10px;
}
#cpu {
  color: #ea76cb;
  font-size: 16px;
  padding-left: 10px;
  padding-right: 10px;
}
#network {
  color: #88c0d0;
  font-size: 16px;
  padding-right: 10px;
  padding-left: 10px;
}

#window {
  color: #81a1c1;
}
#tray {
  padding-right: 15px;
}
